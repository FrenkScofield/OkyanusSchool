@model OkyanusSchool.Models.VM.ViewModel
@{
    ViewData["Title"] = "CreateOgrenciBilgi";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
<div class="col-md-12 my-4">
    <div class="card shadow my-4">
        <div class="card-header py-4">
            Ögrenci Ekle <a asp-action="Index" class="float-right btn btn-outline-secondary">Geri Git</a>
        </div>
        <div class="card-body">
            <form method="post" asp-action="CreateOgrenciBilgi" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                  
                    <div class="col-md-6">
                        <fieldset class="radiogenel">
                            <legend style="width: 24%;">Öğrenci özel bilgileri</legend>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.AD" class="control-label">İsim</label>
                                <input type="text" asp-for="OgrenciBilgi.AD" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.AD" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.SOYAD" class="control-label">Soyisim</label>
                                <input type="text" asp-for="OgrenciBilgi.SOYAD" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.SOYAD" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.TC_KIMLIK" class="control-label">TC kimlik</label>
                                <input type="text" asp-for="OgrenciBilgi.TC_KIMLIK" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.TC_KIMLIK" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.DOGUM_TARIHI" class="control-label">Doğum tarihi</label>
                                <input type="text" asp-for="OgrenciBilgi.DOGUM_TARIHI" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.DOGUM_TARIHI" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.DOGUM_YERI" class="control-label">Doğum yeri</label>
                                <input type="text" asp-for="OgrenciBilgi.DOGUM_YERI" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.DOGUM_YERI" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.CEP_TELEFONU" class="control-label">Çeb telefonu</label>
                                <input type="text" asp-for="OgrenciBilgi.CEP_TELEFONU" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.CEP_TELEFONU" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.EV_TELEFONU" class="control-label">Ev telefonu</label>
                                <input type="text" asp-for="OgrenciBilgi.EV_TELEFONU" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.EV_TELEFONU" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.EMAIL" class="control-label">Email</label>
                                <input type="text" asp-for="OgrenciBilgi.EMAIL" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.EMAIL" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.UYRUK" class="control-label">Uyruk</label>
                                <input type="text" asp-for="OgrenciBilgi.UYRUK" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.UYRUK" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OgrenciBilgi.GUNCEL_TARIH" class="control-label">Güncel tarih</label>
                                <input type="text" asp-for="OgrenciBilgi.GUNCEL_TARIH" class="form-control" required />
                                <span asp-validation-for="OgrenciBilgi.GUNCEL_TARIH" class="text-danger"></span>
                            </div>
                        </fieldset>

                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

}


